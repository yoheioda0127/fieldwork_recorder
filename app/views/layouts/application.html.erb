<!DOCTYPE html>
<html>


  <head>
    <title>FieldworkRecorder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class='top-page-header'>
    <%= link_to image_tag("app_logo.jpg", class: "app_logo_img"), "/" %>

    <div class='nav-lists'>
      <% if user_signed_in? %>
        <div><b><%= link_to 'ログアウト', "/users/sign_out", method: :delete, class: "logout" %></b></div>
        <div><b><%= link_to 'プロフィール編集', "/users/edit", class: "edit" %></b></div>
        <div class = user_name><b><%= link_to current_user.name, "/", class: "user" %></b></div>
        <div><b><%= link_to '記事投稿', "/articles/new", class: "post-article" %></b></div>
      <% else %>
        <div><b><%= link_to '新規登録', "/users/sign_up", class: "sign-up" %></b></div>
        <div><b><%= link_to 'ログイン', "/users/sign_in", class: "login" %></b></div>
      <% end %>
    </div>

  </header>

  <body>
    <%= yield %>
  </body>

  <div class='footer-contents'>
  </div>
  

</html>
