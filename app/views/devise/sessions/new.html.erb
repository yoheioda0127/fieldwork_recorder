<div class="login-back-ground">
<div class ="login-page-title">
  <h1>ログインページ</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class = "login-info-contents">
  <div class = "mail-field-box">
    <div class = "mail-address-tag">
      <%= f.label :メールアドレス %><br />
    </div>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "　（例）field-recorder@gmail.com", class: "field-5" %>
    </div>
  </div>

  <div>
    <div class="user-new-resi-field">
      <%= f.label :パスワード %><br />
    </div>
    <div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "　　パスワードは半角英数です。", class: "field-5" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="check-remember">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を記憶させる %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "new-edit-actions" %>
  </div>
</div>  
<% end %>

