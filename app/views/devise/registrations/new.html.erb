<div class="new-user-back-ground">
<h1 class="new-person" >新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="user-new-resi-field">
    <%= f.label :"名前 or ニックネーム" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field-5" %>
  </div>


  <div class="user-new-resi-field">
    <div class="avator_intro">
      プロフィール画像（アイコンになります）
    </div>
    <div class="avatar_upload">
      <%= f.file_field :avatar, id:"avatar" %>
    </div>
  </div>

  <div class="user-new-resi-field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-5" %>
  </div>

  <div class="user-new-resi-field">
    パスワード
    <div>
      <% if @minimum_password_length %>
      （※<%= @minimum_password_length %> 文字以上）
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "field-5" %>
    </div>
  </div>

  <div class="user-new-resi-field">
    <%= f.label :"確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-5" %>
  </div>

  <div class="user-new-resi-field">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">（※必須）</span>
    </div>
    <div class='input-active-date-wrap'>
      <%= raw sprintf(f.date_select(:birthday, class:'select-birth', id:"birth-date", use_month_numbers: true, prompt:'--', start_year: 1930, end_year: (Time.now.year - 5), date_separator: '%s'), "<p>　年　</p>", "<p>　月　</p>") + "<p>　日　</p>" %>
    </div>
  </div>

  <div class="user-new-resi-field">
    <%= f.label :"現在の所属（学校、会社など）" %><br />
    <%= f.text_field :school_and_company, autocomplete: "school_and_company", class: "field-5" %>
  </div>

  <div class="user-new-resi-field">
    専攻科目（一番近い科目を選択してください）
  </div>
  <%= f.collection_select(:major_id, Major.all, :id, :name, {}, {class: "field-3", id:"major_id"}) %>

  <div class="user-new-resi-field">
    <%= f.label :"現在の研究テーマ" %><br />
    <%= f.text_field :research_theme, autocomplete: "research_theme", class: "field-1" %>
  </div>

  <div class="user-new-resi-field">
    <%= f.label :"自己紹介" %><br />
    <%= f.text_area :introduction, autocomplete: "introduction", class: "field-2" %>
  </div>

  <div class="user-new-resi-field">
    <%= f.submit "登録する", class: "new-edit-actions" %>
  </div>
<% end %>

<%# <%= render "devise/shared/links" %> 
</div>